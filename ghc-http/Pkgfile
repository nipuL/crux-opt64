# Description: A library for client-side HTTP
# URL: http://www.haskell.org/http/
# Maintainer: Lucas Hazel <lucas@die.net.au>
# Depends on: ghc

name=ghc-http
distname=HTTP
version=3001.0.2
release=1
source=(http://hackage.haskell.org/packages/archive/$distname/$version/$distname-$version.tar.gz)

build() {
	cd $distname-$version
	runghc Setup.lhs configure -g --prefix=/usr \
		--libsubdir='$compiler/lib/$pkgid'
	runghc Setup.lhs build
	runghc Setup.lhs copy --destdir=$PKG
	rm -rf $PKG/usr/share
}

