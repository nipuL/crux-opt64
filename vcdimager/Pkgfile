# Description: Create (S)VCDs   
# URL: http://www.vcdimager.org
# Maintainer: Hannes Mayer, kontakt at ecarux de
# Depends on: libcdio

name=vcdimager
version=0.7.23
release=1
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr  
    	make 
    	make DESTDIR=$PKG install

	rm -rf $PKG/usr/info/
}
