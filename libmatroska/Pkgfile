# Maintainer: Brett Goulder <predatorfreak@dcaf-security.org>
# Description: library for mkvtoolnix
# URL: http://www.bunkus.org/videotools/mkvtoolnix/
# Depends on: libebml

name=libmatroska
version=0.8.1
release=1
source=(http://dl.matroska.org/downloads/libmatroska/libmatroska-$version.tar.bz2)

build()
{
    cd $name-$version
    cd make/linux
    make
    make -e prefix=$PKG/usr install
}
