# Description: Syntax highlighting for the GtkTextView widget
# URL: http://gtksourceview.sf.net
# Maintainer: Lucas Hazel <lucas@die.net.au>
# Depends on: gtk, libxml2, libgnomeprint

name=gtksourceview1
version=1.8.5
release=1
source=(http://ftp.acc.umu.se/pub/gnome/sources/gtksourceview/1.8/gtksourceview-$version.tar.bz2)
build() {
	cd gtksourceview-$version  
	rm po/*.po
	sed -i -e 's/USE_NLS=yes/USE_NLS=no/' \
		-e 's/ENABLE_NLS 1/ENABLE_NLS 0/' configure
	./configure --prefix=/usr \
		--disable-gtk-doc
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/gtk-doc
}
