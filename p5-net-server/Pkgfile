# Description: BerkeleyDB PERL module
# URL: http://search.cpan.org/dist/BerkeleyDB/
# Maintainer: Lucas Hazel, lucas@die.net.au
# Depends on: perl

name=p5-net-server
distname=Net-Server
version=0.96
release=1
source=(http://search.cpan.org/CPAN/authors/id/R/RH/RHANDOM/$distname-$version.tar.gz)

build() {
	cd $distname-$version
	perl Makefile.PL
        make OPTIMIZE="$CFLAGS"
        make DESTDIR=$PKG install
        find $PKG -name .packlist -o -name perllocal.pod -exec rm '{}' \;
}
