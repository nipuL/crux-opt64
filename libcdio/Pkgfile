# Description: Compact Disc Input and Control Library
# URL: http://www.gnu.org/software/libcdio/
# Maintainer: Lucas Hazel, lucas at die dot net dot au
# Packager: Hannes Mayer, kontakt at ecarux de

name=libcdio
version=0.78.2
release=1
source=(ftp://ftp.informatik.rwth-aachen.de/pub/gnu/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr  
    	make 
    	make DESTDIR=$PKG install

	rm -rf $PKG/usr/{info,man/jp}
}
