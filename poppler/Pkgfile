# Description: a PDF rendering library based on xpdf 3.0
# URL: http://poppler.freedesktop.org/
# Maintainer: Antonio SJ Musumeci <bile@landofbile.com>
# Depends on: t1lib, gtk, cairo, freetype, fontconfig, ghostscript, pkg-config

name=poppler
version=0.5.4
release=1
source=(http://poppler.freedesktop.org/$name-$version.tar.gz)

build()
{
	cd $name-$version
	autoreconf
	./configure \
		--prefix=/usr \
		--enable-opi \
		--enable-xpdf-headers \
		--enable-cairo-output \
		--enable-libjpeg \
		--disable-utils \
		--disable-gtk-test \
		--disable-poppler-qt \
		--disable-poppler-qt4 \
		--disable-debug
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{doc,locale,gtk-doc}
	rm -rf $PKG/usr/share/
}
